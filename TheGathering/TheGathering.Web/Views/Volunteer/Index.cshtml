@model IEnumerable<TheGathering.Web.Models.Volunteer>

@{
    ViewBag.Title = "Index";
}


            <p class="MainButtons">
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th class="MinorHeadingSemiBold">
                        First Name
                    </th>
                    <th class="MinorHeadingSemiBold">
                        Last Name
                    </th>
                    <th class="MinorHeadingSemiBold">
                        D.O.B.
                    </th>
                    <th class="MinorHeadingSemiBold">
                        Email
                    </th>
                    <th class="MinorHeadingSemiBold">
                        Phone Number
                    </th>
                    <th class="MinorHeadingSemiBold">
                        Leadership Interest
                    </th>
                    <th class="MinorHeadingSemiBold">
                        News Letter
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.Birthday)
                        </td>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.InterestInLeadership)
                        </td>
                        <td class="BodyTextMediumNormal">
                            @Html.DisplayFor(modelItem => item.SignUpForNewsLetter)
                        </td>
                        <td class="SecondaryButtons">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>