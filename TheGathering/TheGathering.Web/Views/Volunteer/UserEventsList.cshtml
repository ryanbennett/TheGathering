@model TheGathering.Web.ViewModels.VolunteerModels.UserEventsListViewModel

@{
    ViewBag.Title = "UserEventsList";
}

<div class="row">
	<div class="col-sm-6">
		<h2>My Events</h2>
			
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].StartingShiftTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].EndingShiftTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].OpenSlots)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].MealSite.AddressLine1)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].Description)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model.VolunteerEvents)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.StartingShiftTime)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.EndingShiftTime)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.OpenSlots)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.MealSite.AddressLine1)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.ActionLink("Details", "Details", "VolunteerEvent", new { id = item.Id }, new { @class = "btn btn-primary" })
					</td>
				</tr>
			}

		</table>
	</div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VolunteerEvents[0].StartingShiftTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolunteerEvents[0].EndingShiftTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolunteerEvents[0].OpenSlots)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolunteerEvents[0].MealSite.AddressLine1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolunteerEvents[0].Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.VolunteerEvents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartingShiftTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndingShiftTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenSlots)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MealSite.AddressLine1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "VolunteerEvent", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="row">
	<div class="col-sm-12">
		<h2>Cancelled Events</h2>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].StartingShiftTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].EndingShiftTime)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].OpenSlots)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].MealSite.AddressLine1)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.VolunteerEvents[0].Description)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model.CancelledEvents)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.StartingShiftTime)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.EndingShiftTime)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.OpenSlots)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.MealSite.AddressLine1)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.ActionLink("Details", "Details", "VolunteerEvent", new { id = item.Id }, null)
					</td>
				</tr>
			}

		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-6">
		@Html.ActionLink("Calendar", "Calendar", "VolunteerEvent", null, new { @class = "btn btn-primary" })
	</div>
</div>