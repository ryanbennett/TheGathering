@model IEnumerable<TheGathering.Web.Models.MealSite>

@{
	ViewBag.Title = "Index";
}

<script type="text/javascript" src="~/Scripts/Bing Maps/BMaps2.js"></script>

<h1>Meal Site Locator</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-4">
			<div class="panel panel-default">
				<div class="container-fluid">
					<div class="row">
						<div class="col-sm-12">
							<h3>Legend</h3>
							<hr style="margin:5px;"/>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12">
							<p>
								<img src="~/Content/Icons/Fork_Knife.png" width="30" height="30" /> - Third Party Meal Site
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12">
							<p>
								<img src="~/Content/Logo/The_Gathering_Icon.png" width="40" height="40" /> - The Gathering Meal Site
							</p>
						</div>
					</div>
				</div>
			</div>
			<div class="form-inline">
				<div class="form-group">
					<input type="text" placeholder="Enter City or ZIP" id="zip" class="form-control" />
				</div>
				<button type="button" onclick="sortMatrix()" class="btn btn-grey">Search</button>
			</div>

			<ul id="zipReturn" class="list-group">
			</ul>
		</div>
		<div class="col-sm-8">
			<div id="myMap"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<h1>All Locations</h1>
			<div class="panel panel-default">
				<table class="table table-center">
					<tr>
						<th>
							Name
						</th>
						<th>
							Address
						</th>
						<th>
							@Html.DisplayNameFor(model => model.City)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.AddressLine1)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.City)
							</td>
							<td>
								<a class="btn btn-grey" href="/MealSite/Details?id=@(item.Id)">Details</a>
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
	</div>
</div>

<script>
	@foreach (var item in Model)
	{
		@Html.Raw("locations.push(new Location('" + item.AddressLine1 + ", " + item.City + "', "+ item.Id +"," + item.Latitude + "," + item.Longitude + ",'" + item.Name + "'," + item.IsTheGatheringSite.ToString().ToLower() + "));")
	}
</script>
