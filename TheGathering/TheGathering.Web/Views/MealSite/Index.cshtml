@model IEnumerable<TheGathering.Web.Models.MealSite>

@{
	ViewBag.Title = "Index";
}

<script type="text/javascript" src="~/Scripts/Google Maps/BMaps2.js"></script>

<h1>Meal Site Locator</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-4">
			<div class="form-inline">
				<div class="form-group">
					<input type="text" placeholder="Enter City, Address, or ZIP Code" id="zip" class="form-control" />
				</div>
				<button type="button" onclick="sortMatrix()" class="btn btn-grey">Search</button>
			</div>

			<ul id="zipReturn" class="list-group">
			</ul>
		</div>
		<div class="col-sm-8">
			<div id="myMap"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<h1>All Locations</h1>
			<div class="panel panel-default">
				<table class="table table-center">
					<tr>
						<th>
							Address
						</th>
						<th>
							@Html.DisplayNameFor(model => model.City)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.MealServed)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.AddressLine1)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.City)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.MealServed)
							</td>
							<td>
								<a class="btn btn-grey" href="/MealSite/Details?id=@(item.Id)">Details</a>
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
	</div>
</div>

<script>
	@foreach (var item in Model)
	{
		@Html.Raw("locationAddresses.push('" + item.AddressLine1 + item.AddressLine2 + ", " + item.City + ", " + item.State + "');locationIds.push(" + item.Id + ");")
	}
</script>
