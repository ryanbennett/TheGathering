@model TheGathering.Web.ViewModels.VolunteerModels.SignUpEventViewModel
@{
    ViewBag.Title = "VolunteerSignUpEvent";
}

<h2>Sign Up for Event</h2>

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerEvent.StartingShiftTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerEvent.StartingShiftTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerEvent.EndingShiftTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerEvent.EndingShiftTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerEvent.MealSite)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerEvent.MealSite)
        </dd>
    </dl>
    <p>
        Are you sure you would like to sign up for this volunteer event?
    </p>
    <p>
        @Html.ActionLink("Yes", "VolunteerEventRegistered", new { volunteerId = Model.Volunteer.Id, eventId = Model.VolunteerEvent.Id }, null)
    </p>
    <p>
        @Html.ActionLink("No", "VolunteerDetails", "VolunteerEvent", new { id = Model.VolunteerEvent.Id }, null)
    </p>
</div>