@model IEnumerable<TheGathering.Web.Models.Volunteer>

@{
    ViewBag.Title = "Users";
}

<h2>Manage Users</h2>

<p>
    @Html.ActionLink("Register New Volunteer", "VolunteerAccountRegister", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.InterestInLeadership)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SignUpForNewsLetter)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsAccountActive)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.InterestInLeadership)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SignUpForNewsLetter)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsAccountActive)
            </td>

            <td>
                @Html.ActionLink("Edit", "VolunteerEdit", new { id = item.Id })
                @Html.ActionLink("Details", "VolunteerDetails", new { id = item.Id })
            </td>
        </tr>
    }

</table>
