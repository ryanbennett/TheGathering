@model TheGathering.Web.Models.Volunteer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h4>Volunteer</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)
	<div class="form-group">
		@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DisplayFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DisplayFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DisplayFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.Birthday.ToString("yyyy-MM-dd") } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DisplayFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.InterestInLeadership, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<div class="checkbox">
				@Html.DisplayFor(model => model.InterestInLeadership)
			</div>
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.SignUpForNewsLetter, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<div class="checkbox">
				@Html.DisplayFor(model => model.SignUpForNewsLetter)
			</div>
		</div>
	</div>
</div>
<p>
    @Html.ActionLink("Send Reset Password Link", "ResetUserPass", new { volunteerID = Model.Id }, new { @class = "btn btn-default" })
    @if (Model.IsAccountActive)
    {
        @Html.ActionLink("Deactivate Account", "ChangeAccountActivationConfirmation", new { id = Model.Id }, new { @class = "btn btn-default" })
    }
    else
    {
        @Html.ActionLink("Activate Account", "ChangeAccountActivationConfirmation", new { id = Model.Id }, new { @class = "btn btn-default" })
    }
    @Html.ActionLink("Edit", "VolunteerEdit", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to User List", "Users", null, new { @class = "btn btn-default" })
    @Html.ActionLink("View Report", "VolunteerReport", new { id = Model.Id }, new { @class = "btn btn-default" })
</p>
