@model TheGathering.Web.ViewModels.Account.AdminGroupRegistrationViewModel

@{
    ViewBag.Title = "GroupLeaderCreate";
}

<h2>Group Leader Create</h2>


@using (Html.BeginForm("GroupLeaderCreate", "AdminPortal", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Create a new account</h3>
    <hr />
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2> Group Leader Name</h2></div>
    </div>
    <div class="row">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-md-9">
                    @Html.EditorFor(model => model.LeaderFirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Group Leader First Name" } })
                    @Html.ValidationMessageFor(model => model.LeaderFirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">

                <div class="col-md-9">
                    @Html.EditorFor(model => model.LeaderLastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Group Leader Last Name" } })
                    @Html.ValidationMessageFor(model => model.LeaderLastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Leader Email</h2></div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "_________@____.___" })
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Leader Birthday</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.LeaderBirthday, new { htmlAttributes = new { @class = "form-control", placeholder = "mm / dd / yyyy" } })
                    @Html.ValidationMessageFor(model => model.LeaderBirthday, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Leader Phone Number</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.LeaderPhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "### - ### - ####" } })
                    @Html.ValidationMessageFor(model => model.LeaderPhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Name</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", placeholder = "Group Name" } })
                    @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Total Group Members</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalGroupMembers, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="BodyTextMediumNormal"><p>(including the group leader)</p></div>
                    @Html.ValidationMessageFor(model => model.TotalGroupMembers, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <div class="form-group form-check">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SignUpForNewsLetter)
                    @Html.ValidationMessageFor(model => model.SignUpForNewsLetter, "", new { @class = "text-danger" })
                    <label class="form-check-label BodyTextMediumNormal">I Would Like To Receive The Gathering Newsletter</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
}