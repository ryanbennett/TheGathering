@model TheGathering.Web.ViewModels.VolunteerGroup.SignUpGroupViewModel
@{
    ViewBag.Title = "GroupLeaderSignUpNumber";
}

<h2>SignUpGroupNumber</h2>
@using (Html.BeginForm("SignUpGroupNumber", "VolunteerGroup", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="form-group">
    Number of people volunteering?
    <div class="col-md-10">
        @Html.EditorFor(model => model.VolunteerSlots, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.VolunteerSlots, "", new { @class = "text-danger" })
    </div>
</div>
<p>
    Are you sure you would like to sign up for this volunteer event?
</p>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-primary" value="Sign Up" />
    </div>
</div>
}
@Html.ActionLink("Back to List", "Index")