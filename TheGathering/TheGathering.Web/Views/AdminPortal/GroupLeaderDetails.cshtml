			<div class="checkbox">
				@Html.DisplayFor(model => model.SignUpForNewsLetter)
			</div>
		</div>
	</div>
</div>
<p>
    @Html.ActionLink("Send Reset Password Link", "GroupLeaderResetUserPass", new { groupLeaderID = Model.Id }, new { @class = "btn btn-primary" })
    @if (Model.IsAccountActive)
    {
        @Html.ActionLink("Deactivate Account", "ChangeLeaderActivationConfirmation", new { id = Model.Id }, new { @class = "btn btn-primary" })
    }
    else
    {
        @Html.ActionLink("Activate Account", "ChangeLeaderActivationConfirmation", new { id = Model.Id }, new { @class = "btn btn-primary" })
    }
    @Html.ActionLink("Edit", "GroupLeaderEdit", new { id = Model.Id }, new { @class = "btn btn-primary" }) 
    @Html.ActionLink("Back to List", "ManageGroupLeaders", null, new { @class = "btn btn-primary" })
</p>
