@model IEnumerable<TheGathering.Web.Models.VolunteerEvent>
@{
    ViewBag.Title = "Calendar";
}

<h2>Calendar</h2>
<div id="calender"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/fullcalendar.min.css" rel="stylesheet" />
<link href="~/Content/fullcalendar.print.min.css" media="print" rel="stylesheet" />
<link href="~/Content/customcalendar.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/fullcalendar.min.js"></script>

    <script>
        $(document).ready(function () {
            var events = [];
            $.ajax({
                type: "GET",
                url: "/VolunteerEvent/GetEvents",
                success: function (data) {
                    $.each(data, function (i, v) {
                        events.push({
                            id: v.Id,
                            start: moment(v.StartingShiftTime),
                            end: moment(v.EndingShiftTime),
                            description: v.Description,
                            location: v.Location,
                            openslots: v.OpenSlots,
                            color: v.ThemeColor,
                            allDay: v.IsFullDay
                        });
                    })

                    GenerateCalender(events);
                },
                error: function (error) {
                    alert('failed');
                }
            })

            function GenerateCalender(events) {
                $('#calender').fullCalendar('destroy');
                $('#calender').fullCalendar({
                    contentHeight: 400,
                    defaultDate: new Date(),
                    timeFormat: 'h(:mm)a',
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,basicWeek,basicDay,agenda'
                    },
                    eventLimit: true,
                    eventColor: '#750049',
                    events: events,
                    eventClick: function (calEvent, jsEvent, view) {
                        $('#myModal #eventTitle').text("Volunteer Event " + calEvent.id);
                        var $description = $('<div/>');
                        $description.append($('<p/>').html('<b>Start: </b>' + calEvent.start.format("DD-MMM-YYYY hh:mm a")));
                        if (calEvent.end != null) {
                            $description.append($('<p/>').html('<b>End: </b>' + calEvent.end.format("DD-MMM-YYYY hh:mm a")));
                        }
                        $description.append($('<p/>').html('<b>Description: </b>' + calEvent.description));
                        $description.append($('<p/>').html('<b>Location: </b>' + calEvent.location));
                        $description.append($('<p/>').html('<b>Number of Open Slots: </b>' + calEvent.openslots));
                        $description.append($('<p/>').html('<a href="/VolunteerEvent/Details/' + calEvent.id + '">Sign up for Event</a>'));
                        $('#myModal #pDetails').empty().html($description);

                        $('#myModal').modal();
                    }
                })
            }
        })
    </script>

}
<br />
<h3>All Volunteer Events</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenSlots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealSite.AddressLine1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartingShiftTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndingShiftTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenSlots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealSite.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Group Sign Up", "SignUpGroupEvent", "VolunteerGroup", new { volunteerId = 2, eventId = item.Id }, null)
                <!--TODO CHANGE TO SIGN UP, details too redundant-->
            </td>
        </tr>
    }

</table>