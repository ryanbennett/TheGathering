@model IEnumerable<TheGathering.Web.Models.VolunteerEvent>

@{
    ViewBag.Title = "Index";
}

<h2>Volunteer Homepage</h2>
<!-- TODO: include some pictures and mission statements or whatever, stuff that's like about The Gathering, etc. -->
<p>
    @Html.ActionLink("Calendar", "Calendar", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Group Register", "GroupRegister", "Account", new { @class = "form-horizontal", role = "form" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenSlots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealSite.AddressLine1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (TheGathering.Web.Models.VolunteerEvent item in Model)
    {
        <tr>
            <td>
                @item.StartingShiftTime.ToString("g")
            </td>
            <td>
                @item.EndingShiftTime.ToString("g")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenSlots)
            </td>
            <td>
                @(item.MealSite.AddressLine1 + ", " + item.MealSite.City + ", " + item.MealSite.State)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
			<td>
				@Html.ActionLink("Details and Individual Sign Up", "Details", new { id = item.Id })
			</td>
            <td>
                @Html.ActionLink("Group Sign Up", "SignUpGroupEvent", "VolunteerGroup", new { eventId = item.Id }, null) |
            </td>
        </tr>
    }

</table>
