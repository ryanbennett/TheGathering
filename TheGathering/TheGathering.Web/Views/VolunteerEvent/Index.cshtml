@model IEnumerable<TheGathering.Web.Models.VolunteerEvent>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
	@Html.ActionLink("Calendar", "Calendar", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenSlots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealSite.AddressLine1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (TheGathering.Web.Models.VolunteerEvent item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartingShiftTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndingShiftTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpenSlots)
        </td>
        <td>
            @(item.MealSite.AddressLine1 + ", " + item.MealSite.City + ", " + item.MealSite.State)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Group Sign Up", "SignUpGroupEvent", "VolunteerGroup", new { volunteerId = 1, eventId = item.Id }, null) |
        </td>
    </tr>
}

</table>
