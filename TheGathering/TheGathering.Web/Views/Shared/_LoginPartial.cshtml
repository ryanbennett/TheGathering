@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
	{
		@Html.AntiForgeryToken()

		String message = "Hello " + ViewBag.UserFriendlyName + "!";

		if (User.IsInRole("admin"))
		{
			<li><a href="/AdminPortal/Index">Admin Portal</a></li>
			<li><a href="/AdminPortal/Users">Users</a></li>
			<li><a href="/AdminPortal/ManageGroupLeaders">Group Leaders</a></li>
			<li><a href="/AdminPortal/MealSites">Meal Sites</a></li>
			<li><a href="/AdminPortal/ManageEvents">Events</a></li>
		}
		else
		{
			<li><a href="/VolunteerEvent/VolunteerCalendar">Dashboard</a></li>
			<li><a href="/Volunteer/UserEventsList">My Events</a></li>
			<li><a href="/Volunteer/LeadershipInfo">Leadership</a></li>
			<li><a href="#" class="donateButton">Donate</a></li>
		}

		<li> @Html.ActionLink(message, "Edit", "Volunteer")</li>
		<li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
	}
}
else
{
	<li><a href="#" class="donateButton">Donate</a></li>
	<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
	<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
}