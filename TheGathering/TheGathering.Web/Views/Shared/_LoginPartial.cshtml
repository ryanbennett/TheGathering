@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated && User.IsInRole("volunteer"))
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))

    {
        String message = "Hello " + @ViewBag.UserFriendlyName + "!";


        <li>@Html.ActionLink("Calendar", "VolunteerCalendar", "VolunteerEvent", null, null)</li>
        <li>@Html.ActionLink("My Events", "UserEventsList", "Volunteer", null, null)</li>
        <li>@Html.ActionLink("Leadership", "LeadershipInfo", "Volunteer", null, null)</li>
        <li><a href="#" class="donateButton">Donate</a></li>
        @Html.AntiForgeryToken()
        <li> @Html.ActionLink(message, "Edit", "Volunteer", null, null)</li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>

    }
}
else
{
    <li><a href="#" class="donateButton">Donate</a></li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    <li>@Html.ActionLink("Register as an Individual", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

}
