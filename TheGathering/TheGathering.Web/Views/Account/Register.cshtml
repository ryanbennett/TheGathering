@model TheGathering.Web.ViewModels.Account.AccountRegistrationViewModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h1>@ViewBag.Title</h1>
    <h3>Create a new account</h3>

    <hr />

    <div row>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-1 , elfont">Name</label>
            </div>
            <div class="form-group">
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                </div>
            </div>
        </form>
    </div>

    <div row>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-1 @*control-label*@, elfont">Email</label>
                <div class="col-sm-5">

                </div>
                <label class="col-sm-3 @*control-label*@, elfont">Phone Number</label>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    <p class="form-control-static">email@example.com</p>
                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                    <p class="form-control-static">###-###-####</p>
                </div>
            </div>
        </form>
    </div>

    <div row>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-12"><h2>Password</h2><h3><b>Must include a capital letter, a number and a special character.</b></h3></label>
            </div>
            <div class="form-group">
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                    <p class="form-control-static">Password</p>
                </div>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password" } })
                    <p class="form-control-static">Confirm Password</p>
                </div>
            </div>
        </form>
    </div>

    <div row>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-12 @*control-label*@, elfont">Birthday</label>
            </div>
            <div class="form-group">
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "20 / 20 / 2020" } })
                    <p class="form-control-static">mm / dd / yyyy</p>
                </div>
                <div class="col-sm-5">
                    <div class="form-group form-check">
                        @Html.EditorFor(model => model.SignUpForNewsLetter)
                        @Html.ValidationMessageFor(model => model.SignUpForNewsLetter, "", new { @class = "text-danger" })
                        <label class="form-check-label"><p>I Would Like To Recieve The Gathering Newsletter</p></label>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <input type="submit" class="btn btn-primary" value="Register" />
    <br />
    <br />
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
