@model TheGathering.Web.ViewModels.Account.AccountRegistrationViewModel

@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account</h4>
    <hr />

    <div class="row">
        <div class="col-sm-1 @*MinorHeadingNormal*@"><h2>Name</h2></div>
    </div>
    <div class="row">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="col-sm-5">
            <div class="form-group">

                <div class="col-md-9">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="BodyTextMediumNormal"><p>First Name</p></div>
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">

                <div class="col-md-9">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="BodyTextMediumNormal"><p>Last Name</p></div>
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-sm-1 @*MinorHeadingNormal*@"><h2>Email</h2></div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <div class="BodyTextMediumNormal"><p>_________@@____.___</p></div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2 @*MinorHeadingNormal*@"><h2>Password</h2></div>
    </div>
    <div class="row">
        The Password Must Include:
    </div>
    <ul class="row">
        <li>A Capitol Letter</li>
        <li>A Number</li>
        <li>A Special Character</li>
    </ul>
  
    <br />
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-9">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    <div class="BodyTextMediumNormal"><p>Password</p></div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">

                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    <div class="BodyTextMediumNormal"><p>Confirm Password</p></div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 @*MinorHeadingNormal*@"><h2>Birthday</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="BodyTextMediumNormal"><p>mm / dd / yyyy</p></div>
                    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Phone Number</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="BodyTextMediumNormal"><p>### - ### - ####</p></div>
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group form-check">

        @Html.EditorFor(model => model.SignUpForNewsLetter)
        @Html.ValidationMessageFor(model => model.SignUpForNewsLetter, "", new { @class = "text-danger" })
        <label class="form-check-label BodyTextMediumNormal" >I would like to recieve The Gathering Newsletter</label>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
