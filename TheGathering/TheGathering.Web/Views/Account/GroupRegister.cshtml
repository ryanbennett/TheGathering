@model TheGathering.Web.ViewModels.Account.GroupRegistrationViewModel

@{
    ViewBag.Title = "GroupRegister";
}

<h2>Group Register</h2>

@using (Html.BeginForm("GroupRegister", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    <h3>Create a new account</h3>
    <hr />
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2> Group Leader Name</h2></div>
    </div>
    <div class="row">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-md-9">
                    @Html.EditorFor(model => model.LeaderFirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Group Leader First Name", maxlength = 40 } })
                    @Html.ValidationMessageFor(model => model.LeaderFirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">

                <div class="col-md-9">
                    @Html.EditorFor(model => model.LeaderLastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Group Leader Last Name", maxlength = 40 } })
                    @Html.ValidationMessageFor(model => model.LeaderLastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Leader Email</h2></div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "_________@____.___", maxlength = 60 })
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Password</h2></div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <h3font class="semibold">Must include a capital and a lowercase letter, a number, a special character, and be 6 characters long.</h3font><a href="#" data-toggle="tooltip" style="text-decoration:none" title="For example: Abc123!">
            <img src="~/Content/question-mark-icon-24x24.png" width="13px" />
    </a>
</div>
    </div>
  
    <br />
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    <div class="BodyTextMediumNormal"><p>Password</p></div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                    <div class="BodyTextMediumNormal"><p>Confirm Password</p></div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Leader Birthday</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.LeaderBirthday, new { htmlAttributes = new { @class = "form-control", placeholder = "mm / dd / yyyy" } })
                    @Html.ValidationMessageFor(model => model.LeaderBirthday, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Leader Phone Number</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.LeaderPhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "### - ### - ####", maxlength = 13 } })
                    @Html.ValidationMessageFor(model => model.LeaderPhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Group Name</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", placeholder = "Group Name", maxlength = 40 } })
                    @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 @*MinorHeadingNormal*@"><h2>Total Group Members</h2></div>
    </div>
    <div class="row">
        <div class=col-sm-5>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalGroupMembers, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="BodyTextMediumNormal"><p>(including the group leader)</p></div>
                    @Html.ValidationMessageFor(model => model.TotalGroupMembers, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <div class="form-group form-check">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SignUpForNewsLetter)
                    @Html.ValidationMessageFor(model => model.SignUpForNewsLetter, "", new { @class = "text-danger" })
                    <label class="form-check-label BodyTextMediumNormal">I Would Like To Receive The Gathering Newsletter</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary" value="Register your group" />
                </div>
            </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
}