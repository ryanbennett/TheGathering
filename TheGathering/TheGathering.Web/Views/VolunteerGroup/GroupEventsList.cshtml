@model TheGathering.Web.ViewModels.VolunteerGroup.GroupNumberEventsListViewModel
@{
    ViewBag.Title = "Group Events List";
}

<h2>GroupEventsList</h2>

<p>
    @Html.ActionLink("Calendar", "Calendar", "VolunteerEvent")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VolunteerEvents[0].StartingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolunteerEvents[0].EndingShiftTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolunteerGroupEvents[0].NumberOfGroupMembersSignedUp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolunteerEvents[0].MealSite.AddressLine1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolunteerEvents[0].Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.VolunteerGroupEvents)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerEvent.StartingShiftTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerEvent.EndingShiftTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfGroupMembersSignedUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerEvent.MealSite.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerEvent.Description)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "VolunteerEvent", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
